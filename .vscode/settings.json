{
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "html",
    {
      "language": "typescript",
      "autoFix": true
    },
    {
      "language": "typescriptreact",
      "autoFix": true
    }
  ],
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  "[typescript]": {
    "editor.formatOnSave": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": false
  },
  "path-intellisense.mappings": {
    "@": "${workspaceRoot}/src",
    "static": "${workspaceRoot}/static",
    "~@": "${workspaceRoot}/src"
  },
}
